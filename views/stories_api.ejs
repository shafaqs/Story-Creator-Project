<!DOCTYPE html>
<html lang="en">

  <!-- to render the api/stories page -->

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <!-- <link rel="stylesheet" href="/style.scss"> -->

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script type="text/javascript" src="../public/scripts/app.js"></script>

</head>

<body>
  <%- include('partials/header.ejs') %>
    <div class="container mt-5">
      <div class="row">
      <span class="stories-list">
        <div></div>
        <% for (const story of stories) { %>
          <div class="container mt-5">
              <div class="row">
                <div class="col-md-4 p-3">
                  <div class="card box-shadow">
                    <div class="card-body">
                      <h3 class="card-title"> <%= story.title %> </h3>
                      <% if (story.content.length <= 300) {  %>
                        <p class="card-text"> <%= story.content  %> </p>
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="btn-group">
                            <form action= "/story/<%= story.id %>" method="get">
                              <button type="submit" class="btn btn-sm btn-outline-secondary">To Read</button>
                            </form>
                      <% } else { %>
                        <p class="card-text"> <%= story.content.substring(0,300)  %> ...... </p>
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="btn-group">
                            <form action= "/story/<%= story.id %>" method="get">
                              <button type="submit" class="btn btn-sm btn-outline-secondary">To Read more</button>
                            </form>
                      <% } %>

                            <% if (story.is_completed) { %>
                              <div class="completed">Completed</div>
                            <% } else { %>
                              <div class="completed">On-going</div>
                            <% } %>
                          </div>
                        </div>
                    </div>
                  </div>
                </div>
        <% } %>

      <!-- <Append stories here> -->
      </span>
</body>

</html>
